{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "adminUnitOverride": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "classes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "url",
          "classes"
        ]
      }
    },
    "harvester-endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "url"
        ]
      }
    },
    "periodic-function-invocation-times": {
      "type": "object",
      "patternProperties": {
        "^(COUNT_RESOURCES|CHECK_HARVESTING_EXECUTION_TIME|CHECK_SESSION_COMPLETENESS|CHECK_MATURITY_LEVEL|CHECK_SESSION_TIMESTAMPS|DECISION_REPORT_DAILY)$": {
          "type": "object",
          "properties": {
            "time": {
              "type": "string",
              "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
            },
            "days": {
              "type": "string",
              "pattern": "^(monday|tuesday|wednesday|thursday|friday|saturday|sunday)(,(monday|tuesday|wednesday|thursday|friday|saturday|sunday))*$"
            }
          },
          "required": [
            "time",
            "days"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "endpoints",
    "harvester-endpoints",
    "periodic-function-invocation-times"
  ]
}